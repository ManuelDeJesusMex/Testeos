        <Label x:Name="lbdatatype" Content="Selecciona el tipo de dato" HorizontalAlignment="Left" Margin="491,9,0,0" VerticalAlignment="Top" Width="155" FontWeight="Bold" Foreground="#FFFFFCFC" Visibility="Hidden"/>
