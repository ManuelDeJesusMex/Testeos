        <DataGrid x:Name="RolesTable" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" ColumnWidth="*" IsSynchronizedWithCurrentItem="True" Margin="216,124,236,179" Visibility="Hidden">
            <DataGrid.Columns>
