        <DataGrid x:Name="TamañosTable" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" ColumnWidth="*" IsSynchronizedWithCurrentItem="True" Margin="219,99,233,204" Visibility="Hidden">
