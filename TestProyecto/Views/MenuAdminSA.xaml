                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>
        <DataGrid x:Name="LotesTable" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" ColumnWidth="*" IsSynchronizedWithCurrentItem="True" Margin="217,89,232,220" Visibility="Hidden">
